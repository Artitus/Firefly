+    @Override
+    public void handle(net.md_5.bungee.protocol.packet.LoginPayloadRequest request) {
+        net.md_5.bungee.protocol.packet.LoginPayloadResponse response = new net.md_5.bungee.protocol.packet.LoginPayloadResponse();
