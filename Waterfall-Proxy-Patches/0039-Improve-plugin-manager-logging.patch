Subject: [PATCH] Improve plugin manager logging


diff --git a/api/src/main/java/net/md_5/bungee/api/plugin/PluginManager.java b/api/src/main/java/net/md_5/bungee/api/plugin/PluginManager.java
index 9fc2a9e2..7e96c74d 100644
--- a/api/src/main/java/net/md_5/bungee/api/plugin/PluginManager.java
+++ b/api/src/main/java/net/md_5/bungee/api/plugin/PluginManager.java
@@ -285,9 +285,10 @@ public class PluginManager
         for ( Map.Entry<String, PluginDescription> entry : toLoad.entrySet() )
         {
             PluginDescription plugin = entry.getValue();
+            ProxyServer.getInstance().getLogger().log( Level.INFO, "Loading plugin {0}...", plugin.getName()); // MikroCord - log when plugins are about to be enabled
             if ( !enablePlugin( pluginStatuses, new Stack<PluginDescription>(), plugin ) )
             {
-                ProxyServer.getInstance().getLogger().log( Level.WARNING, "Failed to enable {0}", entry.getKey() );
+                ProxyServer.getInstance().getLogger().log( Level.WARNING, "Failed to load {0}", entry.getKey() ); // MikroCord - fix inaccurate log message
             }
         }
         toLoad.clear();
@@ -298,6 +299,7 @@ public class PluginManager
     {
         for ( Plugin plugin : plugins.values() )
         {
+            ProxyServer.getInstance().getLogger().log( Level.INFO, "Enabling plugin {0}...", plugin.getDescription().getName()); // MikroCord - log when plugins are about to be enabled
             try
             {
                 plugin.onEnable();
