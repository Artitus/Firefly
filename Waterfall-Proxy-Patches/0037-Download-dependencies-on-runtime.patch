+package eu.mikroskeem.mikrocord;
+
+import io.github.waterfallmc.waterfall.console.WaterfallConsole;
+import lombok.SneakyThrows;
+import net.md_5.bungee.BungeeCord;
+import net.md_5.bungee.api.ProxyServer;
+
+/**
+ * @author Mark Vainomaa
+ */
+public final class Bootstrap {
+    /*
+     * Note: keep up to date with BungeeCordLauncher
+     */
+    @SneakyThrows
+    public static void launch(boolean startConsole) {
+        BungeeCord bungee = new BungeeCord();
+        ProxyServer.setInstance( bungee );
+        bungee.getLogger().info( "Enabled MikroCord version " + bungee.getVersion() );
+        bungee.start();
+
+        if (startConsole)
+            new WaterfallConsole().start();
+    }
+}
diff --git a/proxy/src/main/java/eu/mikroskeem/mikrocord/dependencies/DependencyClassLoader.java b/proxy/src/main/java/eu/mikroskeem/mikrocord/dependencies/DependencyClassLoader.java
